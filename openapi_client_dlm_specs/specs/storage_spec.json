{
    "openapi": "3.1.0",
    "info": {
        "title": "SKA-DLM: Storage Manager REST API",
        "description": "REST interface of the SKA-DLM Storage Manager",
        "license": {
            "name": "BSD-3-Clause",
            "identifier": "BSD-3-Clause"
        },
        "version": "1.1.3"
    },
    "paths": {
        "/storage/query_location_facility": {
            "get": {
                "summary": "Query Location Facility",
                "tags": [
                    "storage"
                ],
                "description": "Query the location_facility table for valid facilities.",
                "operationId": "query_location_facility",
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "items": {
                                        "type": "string"
                                    },
                                    "type": "array",
                                    "title": "Response Query Location Facility"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/storage/query_location": {
            "get": {
                "summary": "Query Location",
                "tags": [
                    "storage"
                ],
                "description": "Query a location.",
                "operationId": "query_location",
                "parameters": [
                    {
                        "name": "location_name",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "could be empty, in which case the first 1000 items are returned",
                            "default": "",
                            "title": "Location Name"
                        },
                        "description": "could be empty, in which case the first 1000 items are returned"
                    },
                    {
                        "name": "location_id",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "Return locations referred to by the location_id provided.",
                            "default": "",
                            "title": "Location Id"
                        },
                        "description": "Return locations referred to by the location_id provided."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": true
                                    },
                                    "title": "Response Query Location"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/storage/init_storage": {
            "post": {
                "summary": "Init Storage",
                "tags": [
                    "storage"
                ],
                "description": "Initialise a new storage. Either location_id or location_name is required.",
                "operationId": "init_storage",
                "parameters": [
                    {
                        "name": "storage_name",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "An organisation or owner name for the storage.",
                            "title": "Storage Name"
                        },
                        "description": "An organisation or owner name for the storage."
                    },
                    {
                        "name": "storage_type",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/StorageType"
                        }
                    },
                    {
                        "name": "root_directory",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "data directory as an absolute path on the remote storage endpoint",
                            "title": "Root Directory"
                        },
                        "description": "data directory as an absolute path on the remote storage endpoint"
                    },
                    {
                        "name": "storage_interface",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/StorageInterface"
                        }
                    },
                    {
                        "name": "location_id",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                }
                            ],
                            "description": "a dlm registered location id",
                            "title": "Location Id"
                        },
                        "description": "a dlm registered location id"
                    },
                    {
                        "name": "location_name",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                }
                            ],
                            "description": "a dlm registered location name",
                            "title": "Location Name"
                        },
                        "description": "a dlm registered location name"
                    },
                    {
                        "name": "storage_capacity",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "description": "reserved storage capacity in bytes",
                            "default": -1,
                            "title": "Storage Capacity"
                        },
                        "description": "reserved storage capacity in bytes"
                    },
                    {
                        "name": "storage_phase",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "$ref": "#/components/schemas/PhaseType",
                            "default": "GAS"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "anyOf": [
                                    {
                                        "type": "object",
                                        "additionalProperties": true
                                    },
                                    {
                                        "type": "null"
                                    }
                                ],
                                "description": "extra rclone values such as secrets required for connection",
                                "title": "Rclone Config"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "title": "Response Init Storage"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/storage/create_storage_config": {
            "post": {
                "summary": "Create Storage Config",
                "tags": [
                    "storage"
                ],
                "description": "Create a new record in the storage_config table for a given storage_id.",
                "operationId": "create_storage_config",
                "parameters": [
                    {
                        "name": "storage_id",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "the storage_id for which to create the entry.",
                            "default": "",
                            "title": "Storage Id"
                        },
                        "description": "the storage_id for which to create the entry."
                    },
                    {
                        "name": "storage_name",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "the name of the storage for which the config is provided.",
                            "default": "",
                            "title": "Storage Name"
                        },
                        "description": "the name of the storage for which the config is provided."
                    },
                    {
                        "name": "config_type",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "$ref": "#/components/schemas/ConfigType",
                            "default": "rclone"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "additionalProperties": true,
                                "description": "the configuration entry. For rclone this is a JSON formatted string",
                                "title": "Config"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "title": "Response Create Storage Config"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/storage/get_storage_config": {
            "get": {
                "summary": "Get Storage Config",
                "tags": [
                    "storage"
                ],
                "description": "Get the storage configuration entry for a particular storage backend.",
                "operationId": "get_storage_config",
                "parameters": [
                    {
                        "name": "storage_id",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "the storage id, by default \"\"",
                            "default": "",
                            "title": "Storage Id"
                        },
                        "description": "the storage id, by default \"\""
                    },
                    {
                        "name": "storage_name",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "the name of the storage volume, by default \"\"",
                            "default": "",
                            "title": "Storage Name"
                        },
                        "description": "the name of the storage volume, by default \"\""
                    },
                    {
                        "name": "config_type",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "$ref": "#/components/schemas/ConfigType",
                            "default": "rclone"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": true
                                    },
                                    "title": "Response Get Storage Config"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/storage/rclone_config": {
            "post": {
                "summary": "Create Rclone Config",
                "tags": [
                    "storage"
                ],
                "description": "Create a new rclone backend configuration entry on the rclone server.",
                "operationId": "create_rclone_config",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "additionalProperties": true,
                                "type": "object",
                                "title": "Config",
                                "description": "a json string containing the configuration"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "boolean",
                                    "title": "Response Create Rclone Config"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/storage/init_location": {
            "post": {
                "summary": "Init Location",
                "tags": [
                    "storage"
                ],
                "description": "Initialise a new location for a storage by specifying the location_name and location_type.",
                "operationId": "init_location",
                "parameters": [
                    {
                        "name": "location_name",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "description": "the orgization or owner's name managing the storage location.",
                            "title": "Location Name"
                        },
                        "description": "the orgization or owner's name managing the storage location."
                    },
                    {
                        "name": "location_type",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/LocationType"
                        }
                    },
                    {
                        "name": "location_country",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "anyOf": [
                                {
                                    "$ref": "#/components/schemas/LocationCountry"
                                },
                                {
                                    "type": "null"
                                }
                            ],
                            "title": "Location Country"
                        }
                    },
                    {
                        "name": "location_city",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "the location city name",
                            "default": "",
                            "title": "Location City"
                        },
                        "description": "the location city name"
                    },
                    {
                        "name": "location_facility",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "the location facility name, from table location_facility",
                            "default": "",
                            "title": "Location Facility"
                        },
                        "description": "the location facility name, from table location_facility"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "title": "Response Init Location"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/storage/query_storage": {
            "get": {
                "summary": "Query Storage",
                "tags": [
                    "storage"
                ],
                "description": "Query storage locations.",
                "operationId": "query_storage",
                "parameters": [
                    {
                        "name": "storage_name",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "Name of the storage to query. If not provided, the first 1000 locations are returned.",
                            "default": "",
                            "title": "Storage Name"
                        },
                        "description": "Name of the storage to query. If not provided, the first 1000 locations are returned."
                    },
                    {
                        "name": "storage_id",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "description": "ID of the storage to query. Ignored if storage_name is provided.",
                            "default": "",
                            "title": "Storage Id"
                        },
                        "description": "ID of the storage to query. Ignored if storage_name is provided."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful Response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": true
                                    },
                                    "title": "Response Query Storage"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HTTPValidationError"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ConfigType": {
                "type": "string",
                "enum": [
                    "rclone",
                    "ssh",
                    "aws",
                    "gcs"
                ],
                "title": "ConfigType",
                "description": "Config type."
            },
            "HTTPValidationError": {
                "properties": {
                    "detail": {
                        "items": {
                            "$ref": "#/components/schemas/ValidationError"
                        },
                        "type": "array",
                        "title": "Detail"
                    }
                },
                "type": "object",
                "title": "HTTPValidationError"
            },
            "LocationCountry": {
                "type": "string",
                "enum": [
                    "AU",
                    "ZA",
                    "UK"
                ],
                "title": "LocationCountry",
                "description": "Location country."
            },
            "LocationType": {
                "type": "string",
                "enum": [
                    "local-dev",
                    "low-integration",
                    "mid-integration",
                    "low-operations",
                    "mid-operations"
                ],
                "title": "LocationType",
                "description": "Location type."
            },
            "PhaseType": {
                "type": "string",
                "enum": [
                    "GAS",
                    "LIQUID",
                    "SOLID",
                    "PLASMA"
                ],
                "title": "PhaseType",
                "description": "Phase type / resilience level."
            },
            "StorageInterface": {
                "type": "string",
                "enum": [
                    "posix",
                    "s3",
                    "sftp",
                    "https"
                ],
                "title": "StorageInterface",
                "description": "Storage interface."
            },
            "StorageType": {
                "type": "string",
                "enum": [
                    "filesystem",
                    "objectstore",
                    "tape"
                ],
                "title": "StorageType",
                "description": "Storage type."
            },
            "ValidationError": {
                "properties": {
                    "loc": {
                        "items": {
                            "anyOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "integer"
                                }
                            ]
                        },
                        "type": "array",
                        "title": "Location"
                    },
                    "msg": {
                        "type": "string",
                        "title": "Message"
                    },
                    "type": {
                        "type": "string",
                        "title": "Error Type"
                    }
                },
                "type": "object",
                "required": [
                    "loc",
                    "msg",
                    "type"
                ],
                "title": "ValidationError"
            }
        }
    }
}
